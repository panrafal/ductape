[
    {
        "files": {
            "paths": [
                "src/",
                "vendor/autoload.php",
                "vendor/composer/",
                "vendor/stamina/chequer-php/Chequer.php",
                "vendor/nikic/php-parser/lib/PhpParser"
                ]
        }
    },

    {
        "files": {
            "paths": [
                "vendor/symfony"
                ],
            "filter": {
                "$regex" : "/\\.php/",
                "$not" : {"$regex" : "/\\bTests\\b/i"}
                }
        }
    },

    {
        "@comment": "lastone",
        "files": {
            "paths": [
                "ductape.php"
                ]
        }
    },

    {
        "combinePhp": {
            "contentOut": "combined.php",
            "comments": false
        }
    }

]